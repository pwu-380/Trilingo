  "grammar": [
    {
      "pattern": "把 + Object + Verb + Complement",
      "english": "Disposal construction (do something to an object)",
      "example": "他把书放在桌子上。"
    },
    {
      "pattern": "被 + Agent + Verb",
      "english": "Passive voice",
      "example": "蛋糕被他吃了。"
    },
    {
      "pattern": "越来越 + Adj/Verb",
      "english": "More and more",
      "example": "天气越来越冷了。"
    },
    {
      "pattern": "除了 A 以外，还/也 B",
      "english": "Besides A, also B",
      "example": "除了中文以外，我还学英文。"
    },
    {
      "pattern": "Verb + 着",
      "english": "Continuous state",
      "example": "门开着。"
    },
    {
      "pattern": "不但 A 而且 B",
      "english": "Not only A but also B",
      "example": "他不但聪明，而且努力。"
    },
    {
      "pattern": "如果 A 就 B",
      "english": "If A then B",
      "example": "如果明天下雨，我就不去了。"
    },
    {
      "pattern": "连 A 都/也 B",
      "english": "Even A also B (emphasis)",
      "example": "他连名字都不知道。"
    }
  ],
