  "grammar": [
    {
      "pattern": "因为 A 所以 B",
      "english": "Because A, therefore B",
      "example": "因为下雨，所以我没去。"
    },
    {
      "pattern": "虽然 A 但是 B",
      "english": "Although A, but B",
      "example": "虽然很累，但是很开心。"
    },
    {
      "pattern": "比 (comparison)",
      "english": "A is more [adj] than B",
      "example": "他比我高。"
    },
    {
      "pattern": "Subject + 正在 + Verb",
      "english": "In the process of doing (progressive)",
      "example": "他正在吃饭。"
    },
    {
      "pattern": "Subject + 要 + Verb",
      "english": "Want to / going to",
      "example": "我要去中国。"
    },
    {
      "pattern": "可以 / 能 + Verb",
      "english": "Can / may (permission or ability)",
      "example": "你可以坐这儿。"
    },
    {
      "pattern": "Subject + 得 + complement",
      "english": "Degree complement (how well something is done)",
      "example": "他说得很好。"
    },
    {
      "pattern": "从 A 到 B",
      "english": "From A to B (time or place)",
      "example": "从北京到上海。"
    },
    {
      "pattern": "Subject + 给 + Indirect Object + Verb + Direct Object",
      "english": "Give / do something for someone",
      "example": "他给我买了一本书。"
    },
    {
      "pattern": "一边 A 一边 B",
      "english": "Do A and B at the same time",
      "example": "她一边唱歌一边跳舞。"
    }
  ],
