  "grammar": [
    { "pattern": "A + 比 + B + Adj", "english": "Basic comparison (A is more [adj] than B)", "example": "哥哥比我高。" },
    { "pattern": "A + 没有 + B + [这么/那么] + Adj", "english": "Negative comparison (A is not as [adj] as B)", "example": "今天没有昨天那么热。" },
    { "pattern": "Subject + 正在 + Verb + (呢)", "english": "Progressive aspect (Action in progress right now)", "example": "妈妈正在做饭呢。" },
    { "pattern": "Verb + 着", "english": "Continuous state (Action is ongoing or state is maintained)", "example": "她穿着红色的衣服。" },
    { "pattern": "Verb + 过", "english": "Experiential aspect (Have done something before)", "example": "我过去过中国。" },
    { "pattern": "Number + 多 / 左右", "english": "Approximation (More than / Around)", "example": "十多个人 / 五点左右。" },
    { "pattern": "最 / 更 + Adj", "english": "Superlative and comparative adverbs (Most / More)", "example": "这是最好的电脑。" },
    { "pattern": "虽然 ... 但是 ...", "english": "Conjunction: Although ... but ...", "example": "虽然天气不好，但是他还是去了。" },
    { "pattern": "因为 ... 所以 ...", "english": "Conjunction: Because ... so ...", "example": "因为他生病了，所以没去上班。" },
    { "pattern": "又 ... 又 ...", "english": "Both ... and ... (Two qualities simultaneously)", "example": "这个苹果又大又红。" },
    { "pattern": "就 / 才", "english": "Adverbs of time (Early/Soon vs. Late/Slow)", "example": "他八点就来了。/ 他九点才来。" },
    { "pattern": "Verb + 得 + Adj", "english": "Complement of state (Evaluating how an action is done)", "example": "她跑得很快。" },
    { "pattern": "可能 / 能够 / 可以", "english": "Expanded modal verbs (Possibility and permission)", "example": "明天可能会下雪。" },
    { "pattern": "A + 还是 + B？", "english": "Alternative question (A or B?)", "example": "你喝茶还是喝咖啡？" },
    { "pattern": "从 ... 到 ...", "english": "From ... to ... (Time or space)", "example": "从我家到学校很近。" },
    { "pattern": "离 ... [远/近]", "english": "Distance from a point", "example": "我家离公司很远。" },
    { "pattern": "对 + Object + Verb/Adj", "english": "Preposition: Towards/To/For", "example": "跑步对身体很好。" },
    { "pattern": "Verb + 完 / 好 / 错", "english": "Result complements (Finish / Finish well / Do wrongly)", "example": "我写完了。" },
    { "pattern": "一 ... 就 ...", "english": "As soon as ... then ...", "example": "我一回家就睡觉。" },
    { "pattern": "别 / 不要 + Verb", "english": "Negative commands (Don't...)", "example": "别说话。" }
  ],
